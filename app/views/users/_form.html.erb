<%= form_for(@user, html: {multipart: true}) do |f| %>
  <ul>
  <% @user.errors.full_messages.each do |user| %>
    <li><%= user %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_area :email %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <% if @user.image.exists? %>
      <%= image_tag @user.image.url %><br/>
    <% end %>
    <%= f.label :image, "Attach a Profile Image" %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
